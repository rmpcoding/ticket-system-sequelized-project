<section>
  <header class="header__landing-page">
    <h1 class="section__title">Ticket Issuing System</h1>
    <h3 class="section__title section__subtitle">Please scroll below to use this program</h3>
    {{!-- <button class="btn">Click Me</button> --}}
  </header>
</section>

<main>
  <section class="section">
    <form class="form">
      <div class="form-group"> 
        {{!-- Took out ACTION and METHOD:  
              action="/api/tickets" method="POST"
        --}}
        <label class="label" for="ticket_name">Describe Issue:</label>
      </div>
      <input class="form-input" type="text" id="ticket_name" name="ticket_name" /><br /><br />
      <input class="btn btn-primary" type="submit" value="Submit" />
    </form>
  </section>

  <section class="section">
    <div class="grid-container">
      <div class="grid-container-item">
        <ul class="list">
          {{#each ticket}}
          {{#unless this.completed}}
          <p class="item-todo" data-id={{this.id}}>{{this.id}}. 
            <span>{{this.ticket_name}}</span> 
              <span> 
                <button class="btn btn-send">Send
                </button>
            </span>
          </p>
          {{/unless}}
          {{/each}}
        </ul>
      </div>

      <div class="grid-container-item">
        <ul class="list completed-list">
          {{#each ticket}}
            {{#if this.completed}}
            <p class="item" data-id={{this.id}}>{{this.id}}. 
              <span>{{this.ticket_name}}</span> 
                <span> 
                  <button class="btn btn-delete">Complete
                  </button>
              </span>
            </p> 
            {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
  </section>
</main>

